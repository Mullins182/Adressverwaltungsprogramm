<Window x:Class="Adressverwaltungsprogramm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adressverwaltungsprogramm"
        mc:Ignorable="d"
        Title="Ben's Adressverwaltungs-Programm" Height="800" Width="700" Background="DarkRed" BorderThickness="1.5" BorderBrush="Goldenrod">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>            
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
          
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Column="0" Height="500">

            <Label x:Name="VornameLabel"    Content="VORNAME" Height="25" Width="150" HorizontalAlignment="left" Margin="5" Foreground="DarkOrange" FontFamily="chiller" FontSize="18" FontWeight="Bold"/>
            <TextBox x:Name="Vorname"       Width="400" Height="25" Background="OrangeRed"/>
            <Label x:Name="NachnameLabel"   Content="NACHNAME" Height="25" Width="150" HorizontalAlignment="left" Margin="5" Foreground="DarkOrange" FontFamily="chiller" FontSize="18" FontWeight="Bold"/>
            <TextBox x:Name="Nachname"      Width="400" Height="25" Background="OrangeRed"/>
            <Label x:Name="StrasseLabel"    Content="STRAßE" Height="25" Width="150" HorizontalAlignment="left" Margin="5" Foreground="DarkOrange" FontFamily="chiller" FontSize="18" FontWeight="Bold"/>
            <TextBox x:Name="Straße"        Width="400" Height="25" Background="OrangeRed"/>
            <Label x:Name="PLZLabel"        Content="POSTLEITZAHL" Height="25" Width="150" HorizontalAlignment="left" Margin="5" Foreground="DarkOrange" FontFamily="chiller" FontSize="18" FontWeight="Bold"/>
            <TextBox x:Name="PLZ"           Width="400" Height="25" Background="OrangeRed"/>
            <Label x:Name="OrtLabel"        Content="ORT" Height="25" Width="150" HorizontalAlignment="left" Margin="5" Foreground="DarkOrange" FontFamily="chiller" FontSize="18" FontWeight="Bold"/>
            <TextBox x:Name="Ort"           Width="400" Height="25" Background="OrangeRed"/>
            <Label x:Name="TelefonLabel"    Content="TELEFONNUMMER" Height="25" Width="150" HorizontalAlignment="left" Margin="5" Foreground="DarkOrange" FontFamily="chiller" FontSize="18" FontWeight="Bold"/>
            <TextBox x:Name="Telefonnummer" Width="400" Height="25" Background="OrangeRed"/>
            <Label x:Name="HandyLabel"      Content="MOBILNUMMER" Height="25" Width="150" HorizontalAlignment="left" Margin="5" Foreground="DarkOrange" FontFamily="chiller" FontSize="18" FontWeight="Bold"/>
            <TextBox x:Name="Handynummer"   Width="400" Height="25" Background="OrangeRed"/>
            <Label x:Name="EmailLabel"      Content="EMAILADRESSE" Height="25" Width="150" HorizontalAlignment="left" Margin="5" Foreground="DarkOrange" FontFamily="chiller" FontSize="18" FontWeight="Bold"/>
            <TextBox x:Name="Emailadresse"  Width="400" Height="25" Background="OrangeRed"/>

        </StackPanel>

        <StackPanel Grid.Column="1" Height="300">
            <Button x:Name="saveData" Content="Kontaktdaten speichern" FontFamily="chiller" FontSize="25" Height="60" Width="200" Background="black" Foreground="GreenYellow" BorderThickness="3" BorderBrush="YellowGreen" Click="saveData_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
